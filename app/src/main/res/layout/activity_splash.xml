<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_kucing"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instant Developer"
        android:textColor="@color/white"
        android:layout_center="true"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get help from expert in 15 minutes"
        android:textColor="@color/white"
        android:layout_center="true"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/image1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_center="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text2"
        android:src="@drawable/raf"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="need help with coding problems?register"
        android:textColor="@color/white"
        android:layout_center="true"
        android:layout_below="@+id/image1"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_center="true"
        android:text="sign up"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text3"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_center="true"
        android:text="log in"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_signup"
        android:layout_height="50dp"/>

</RelativeLayout>